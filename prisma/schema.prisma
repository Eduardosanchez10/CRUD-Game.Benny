generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("POSTGRES_URL")
}

model Platform {
  id   Int    @id @default(autoincrement())
  name String
  
}

model User {
  id       Int     @id @default(autoincrement())
  name     String
  email    String @unique
  password String
  game     Game[]
  match    Match[]
}

model Gender {
  id   Int    @id @default(autoincrement())
  name String
  game Game[]
}

model Game {
  id       Int      @id @default(autoincrement())
  name     String
  launcher DateTime @default(now())
  price    Float @default(0)
  
  user   User @relation(fields: [userId], references: [id])
  userId Int

  gender   Gender @relation(fields: [genderId], references: [id])
  genderId Int

  match Match[]
}

model Match {
  id   Int      @id @default(autoincrement())
  init DateTime @default(now())

  duration Int

  user   User @relation(fields: [userId], references: [id])
  userId Int

  game   Game @relation(fields: [gameId], references: [id])
  gameId Int
}
